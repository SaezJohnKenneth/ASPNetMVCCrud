@model IEnumerable<ASPNetMVCCrud.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "Index","Add")
</p>
<table class="table">
    <tr>
        <th>
            <b>Name</b>
        </th>
        <th>
            <b>Address</b>
        </th>
        <th>
            <b>Position</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.ActionLink("Edit", "Index", "Edit",new { id=item.ID },null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
